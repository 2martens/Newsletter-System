<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/options.xsd">
    <import>
        <categories>
            <!-- module -->
            <category name="module">
                <showorder>1</showorder>
            </category>
                <category name="module.content">
                    <parent>module</parent>
                </category>
            <!-- /module -->
            <!-- newsletter category -->
            <category name="message">
                <showorder>5</showorder>
            </category>
            <category name="message.general.newslettersystem">
                <parent>message.general</parent>
                <options>module_newslettersystem</options>
            </category>
                
            <!-- /newletter category -->
        </categories>
        
        <options>
            <!-- module -->
            <option name="module_newslettersystem">
                <categoryname>module.content</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>1</defaultvalue>                
            </option>
            <!-- /module -->
            <!-- newsletter options -->
            <option name="message_general_newslettersystem_from">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>text</optiontype>
                <showorder>1</showorder>
            </option>
            <option name="message_general_newslettersystem_items">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>integer</optiontype>
                <defaultvalue>30</defaultvalue>
                <showorder>2</showorder>
            </option>
            <option name="message_general_newslettersystem_login">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>text</optiontype>
                <defaultvalue><![CDATA[User:Password]]></defaultvalue>
                <showorder>3</showorder>
            </option>
            <option name="message_general_newslettersystem_sortOrder_subscriber">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>select</optiontype>
                <defaultvalue><![CDATA[ASC]]></defaultvalue>
                <selectoptions>
                    <![CDATA[ASC:ASC
DESC:DESC]]>
                </selectoptions>
                <showorder>4</showorder>
            </option>
            <option name="message_general_newslettersystem_sortField_subscriber">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>select</optiontype>
                <defaultvalue><![CDATA[subscriberID]]></defaultvalue>
                <selectoptions>
                    <![CDATA[subscriberID:wcf.acp.option.message_general_newslettersystem_sortField_subscriber.subscriberID
username:wcf.acp.option.message_general_newslettersystem_sortField_subscriber.username
email:wcf.acp.option.message_general_newslettersystem_sortField_subscriber.email]]>
                </selectoptions>
                <showorder>5</showorder>
            </option>
            <option name="message_general_newslettersystem_sortOrder_newsletter">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>select</optiontype>
                <defaultvalue><![CDATA[ASC]]></defaultvalue>
                <selectoptions>
                    <![CDATA[ASC:ASC
DESC:DESC]]>
                </selectoptions>
                <showorder>6</showorder>
            </option>
            <option name="message_general_newslettersystem_sortField_newsletter">
                <categoryname>message.general.newslettersystem</categoryname>
                <optiontype>select</optiontype>
                <defaultvalue><![CDATA[newsletterID]]></defaultvalue>
                <selectoptions>
                    <![CDATA[newsletterID:wcf.acp.option.message_general_newslettersystem_sortField_newsletter.newsletterID
username:wcf.acp.option.message_general_newslettersystem_sortField_newsletter.username
deliveryTime:wcf.acp.option.message_general_newslettersystem_sortField_newsletter.deliveryTime
subject:wcf.acp.option.message_general_newslettersystem_sortField_newsletter.subject]]>
                </selectoptions>
                <showorder>7</showorder>
            </option>
            
            <!-- /newsletter options -->
        </options>
    </import>
</data>